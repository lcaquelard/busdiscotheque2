<div id="mobile_nav">
    <div class="options">
        <div class="close"></div>
    </div>
    <div class="menu">
        <div class="item{% if 'index' in current_path %} current{% endif %}"><a href="{{ path('index') }}"></a></div>
        <div class="item droppable active{% if 'bus' in current_path %} current{% endif %}">
            <a href="{{ path('bus') }}"><span>Nos bus</span></a>
            <div class="chevron">></div>
            <div class="drop">
                {% for name, type in bus_types %}
                    {% if type.isDisplayedPage() %}
                        <div class="item{% if 'bus_' ~ name in current_path %} current{% endif %}"><a {% if type.isExternal() %}target="_blank"{% endif %} href="{% if type.isExternal() %}{{ type.getTarget() }}{% else %}{{ path('bus_' ~ name) }}{% endif %}"><span>{{ type.getName() }}</span></a></div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="item{% if 'program' in current_path %} current{% endif %}"><a href="{{ path('program') }}"><span>Votre soir√©e</span></a></div>
        <div class="item{% if 'packs' in current_path %} current{% endif %}"><a href="{{ path('packs') }}"><span>Nos packs</span></a></div>
        <div class="item{% if 'pricing' in current_path %} current{% endif %}"><a href="{{ path('pricing') }}"><span>Tarifs</span></a></div>
        <div class="item{% if 'options' in current_path %} current{% endif %}"><a href="{{ path('options') }}"><span>Options</span></a></div>
        <div class="item{% if 'booking' in current_path %} current{% endif %}"><a href="{{ path('booking') }}"><span>Devis</span></a></div>
    </div>
</div>