{% extends 'base.html.twig' %}
{% set title = "Nos minibus" %}
{% set meta_description = "Découvrez notre sélection de minibus de fête enb lcoation pour 1 à 9 personnes, plus l'option karaoké !"%}
    {% block main %}
    <section id="minibusdisco" class="bus rev">
        <div class="front">
            <div class="content">
                <h3>Mini Bus Disco</h3>
                <div class="bus-icon karaoke">Karaoké</div>
                <div class="bus-icon capacity">1 à 9 pers</div>
                <div class="bus-icon carpet">Tapis rouge</div>
                <div class="bus-icon soft">Softs inclus</div>
                <div class="bus-icon screen">Ecran HD</div>
            </div>
        </div>
        <div class="back">
            <div class="content">
                <h3>Mini Bus Disco</h3>
                <div class="zoom"></div>
            </div>
        </div>
    </section>
{% endblock %}
{% block modals %}
    <div class="modal minibusdisco" role="dialog" aria-modal="true" aria-label="Galerie de photos du Mini Bus Disco agrandies">
        <div class="close"></div>
        <div class="slider">
            <img src="{{ asset('build/images/photo/bus/mini/minibusdisco/1.webp') }}" alt="Image défilant horizontalement">
            <img src="{{ asset('build/images/photo/bus/mini/minibusdisco/2.webp') }}" alt="Image défilant horizontalement">
            <img src="{{ asset('build/images/photo/bus/mini/minibusdisco/3.webp') }}" alt="Image défilant horizontalement">
        </div>
    </div>
{% endblock %}